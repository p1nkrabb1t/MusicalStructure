<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/pad_M"
        android:text="Music Player"
        android:textColor="@color/hot_pink"
        android:textSize="@dimen/txt_M"
        android:textStyle="bold" />


    <GridView
        android:id="@+id/gv_playlists"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:horizontalSpacing="@dimen/spc_S"
        android:numColumns="2"
        android:orientation="vertical"
        android:paddingBottom="@dimen/pad_M"
        android:paddingLeft="@dimen/pad_M"
        android:paddingRight="@dimen/pad_M"
        android:paddingTop="@dimen/pad_M"
        android:verticalSpacing="@dimen/spc_S"

        />

</LinearLayout>